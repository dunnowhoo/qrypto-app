        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"bankAccountNumber\": \"7297568196\",\n  \"bankCode\": \"451\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        }
      },
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "type": "text/javascript",
            "packages": {},
            "requests": {},
            "exec": [
              "const CryptoJS = require('crypto-js');",
              "",
              "const timestamp = Date.now().toString();",
              "bru.setVar('current_ts', timestamp);",
              "",
              "const secret = bru.getEnvVar(\"idrx-secret-key\"); ",
              "",
              "const hash = CryptoJS.HmacSHA256(timestamp, secret);",
              "const signature = CryptoJS.enc.Hex.stringify(hash);",
              "",
              "bru.setVar('current_sig', signature);",
              "",
              "console.log(\"Timestamp generated:\", timestamp);",
              "console.log(\"Signature generated:\", signature);"
            ]
          }
        }
      ]
    },
