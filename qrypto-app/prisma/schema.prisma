generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BankAccount {
  id                String        @id @default(uuid())
  userId            String
  bankCode          String
  bankAccountNumber String
  createdAt         DateTime      @default(now())
  User              User          @relation(fields: [userId], references: [id])
  Merchant          Merchant[]
  Transaction       Transaction[]
}

model Merchant {
  id            String      @id @default(uuid())
  merchantId    String      @unique
  name          String
  bankAccountId String
  defaultAmount Float
  nmid          String?     @unique
  merchantName  String?
  bankCode      String?
  accountNumber String?
  accountName   String?
  isActive      Boolean     @default(true)
  description   String?
  updatedAt     DateTime    @updatedAt
  BankAccount   BankAccount @relation(fields: [bankAccountId], references: [id])

  @@index([merchantName])
}

model MerchantMap {
  id            String   @id @default(uuid())
  nmid          String?  @unique
  merchantName  String?
  bankCode      String
  accountNumber String
  accountName   String
  isActive      Boolean  @default(true)
  description   String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([merchantName])
}

model QrisPayment {
  id              String      @id @default(cuid())
  transactionId   String      @unique
  qrisRaw         String
  merchantName    String
  merchantCity    String?
  merchantId      String?
  terminalId      String?
  paymentGateway  String?
  gatewayRefId    String?
  gatewayStatus   String?
  gatewayResponse Json?
  createdAt       DateTime    @default(now())
  paidAt          DateTime?
  Transaction     Transaction @relation(fields: [transactionId], references: [id])

  @@index([gatewayRefId])
  @@index([merchantId])
}

model Transaction {
  id             String            @id @default(uuid())
  userId         String
  bankAccountId  String?
  amount         Float
  status         TransactionStatus @default(PENDING)
  type           TransactionType
  merchantId     String?
  createdAt      DateTime          @default(now())
  completedAt    DateTime?
  cryptoAmount   Decimal?          @db.Decimal(36, 18)
  cryptoCurrency String?           @default("IDRX")
  txHash         String?
  fromAddress    String?
  toAddress      String?
  networkFee     Decimal?          @db.Decimal(36, 18)
  fiatAmount     Decimal?          @db.Decimal(20, 2)
  fiatCurrency   String?           @default("IDR")
  description    String?
  updatedAt      DateTime          @updatedAt
  QrisPayment    QrisPayment?
  BankAccount    BankAccount?      @relation(fields: [bankAccountId], references: [id])
  User           User              @relation(fields: [userId], references: [id])

  @@index([status])
  @@index([txHash])
  @@index([userId])
}

model TreasuryWallet {
  id        String   @id @default(cuid())
  address   String   @unique
  network   String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
}

model User {
  id                 String        @id @default(uuid())
  walletAddress      String        @unique
  address            String?
  fullName           String?
  email              String?
  phone              String?
  idNumber           String?       @unique
  kycStatus          KycStatus     @default(PENDING)
  encryptedApiKey    String?
  encryptedSecretKey String?
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt
  BankAccount        BankAccount[]
  Transaction        Transaction[]
}

enum KycStatus {
  PENDING
  APPROVED
  REJECTED
}

enum TransactionStatus {
  PENDING
  PROCESSING
  COMPLETED
  SUCCESS
  FAILED
  EXPIRED
  REFUNDED
}

enum TransactionType {
  MANUAL
  QRIS
  QRIS_PAYMENT
  RECEIVE
  SEND
  SWAP
  TOP_UP
}
