generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id               String        @id @default(uuid())
  walletAddress    String        @unique
  address          String?       @unique
  fullName         String?
  email            String?
  phone            String?
  kycStatus        KycStatus     @default(PENDING)
  encryptedApiKey  String?
  encryptedSecretKey String?
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
  
  bankAccounts     BankAccount[]
  transactions     Transaction[]
}

model BankAccount {
  id                String        @id @default(uuid())
  userId            String
  bankCode          String
  bankAccountNumber String
  createdAt         DateTime      @default(now())
  
  user              User          @relation(fields: [userId], references: [id])
  transactions      Transaction[]
  merchants         Merchant[]
}

// Transaction types
enum TransactionType {
  MANUAL
  QRIS
  QRIS_PAYMENT  // User pays QRIS with crypto
  RECEIVE       // User receives crypto
  SEND          // User sends crypto
  SWAP          // Token swap
  TOP_UP        // Fiat to crypto
}

// Transaction status
enum TransactionStatus {
  PENDING       // Created, awaiting crypto transfer
  PROCESSING    // Crypto received, processing fiat payment
  COMPLETED     // Completed successfully
  SUCCESS       // Completed successfully (alias)
  FAILED        // Failed
  EXPIRED       // Payment timeout
  REFUNDED      // Refunded to user
}

model Transaction {
  id              String            @id @default(uuid())
  userId          String
  bankAccountId   String?
  amount          Float
  status          TransactionStatus @default(PENDING)
  type            TransactionType
  merchantId      String?
  createdAt       DateTime          @default(now())
  completedAt     DateTime?
  
  // Crypto side
  cryptoAmount    Decimal?          @db.Decimal(36, 18)
  cryptoCurrency  String?           @default("IDRX") // IDRX, USDC, ETH
  txHash          String?           // Blockchain transaction hash
  fromAddress     String?           // Sender wallet address
  toAddress       String?           // Receiver wallet address (QRypto treasury)
  networkFee      Decimal?          @db.Decimal(36, 18)
  
  // Fiat side (for QRIS payments)
  fiatAmount      Decimal?          @db.Decimal(20, 2)
  fiatCurrency    String?           @default("IDR")
  
  // QRIS specific
  qrisPayment     QrisPayment?
  
  // Metadata
  description     String?
  
  user            User              @relation(fields: [userId], references: [id])
  bankAccount     BankAccount?      @relation(fields: [bankAccountId], references: [id])
  
  @@index([userId])
  @@index([status])
  @@index([txHash])
}

model QrisPayment {
  id              String      @id @default(cuid())
  transactionId   String      @unique
  transaction     Transaction @relation(fields: [transactionId], references: [id])
  
  // QRIS Data
  qrisRaw         String      // Original QRIS string
  merchantName    String
  merchantCity    String?
  merchantId      String?
  terminalId      String?
  
  // Payment Gateway
  paymentGateway  String?     // "xendit", "oy", "durianpay"
  gatewayRefId    String?     // Reference ID from payment gateway
  gatewayStatus   String?     // Status from payment gateway
  gatewayResponse Json?       // Full response from gateway
  
  // Timestamps
  createdAt       DateTime    @default(now())
  paidAt          DateTime?   // When fiat payment was made to merchant
  
  @@index([merchantId])
  @@index([gatewayRefId])
}

// QRypto Treasury Wallet for receiving crypto payments
model TreasuryWallet {
  id        String   @id @default(cuid())
  address   String   @unique
  network   String   // "base", "ethereum", "polygon"
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
}

model Merchant {
  id              String      @id @default(uuid())
  merchantId      String      @unique
  name            String
  bankAccountId   String
  defaultAmount   Float
  
  // QRIS Identification (at least one required)
  nmid            String?     @unique  // National Merchant ID from QRIS
  merchantName    String?              // Fallback: match by name
  
  // Bank Account for Xendit Disbursement
  bankCode        String?              // Xendit bank code: "BCA", "MANDIRI", etc.
  accountNumber   String?              // Bank account number
  accountName     String?              // Account holder name
  
  // Metadata
  isActive        Boolean     @default(true)
  description     String?              // Notes about this merchant
  updatedAt       DateTime    @updatedAt
  
  bankAccount     BankAccount @relation(fields: [bankAccountId], references: [id])
  
  @@index([merchantName])
}

enum KycStatus {
  PENDING
  APPROVED
  REJECTED
}

