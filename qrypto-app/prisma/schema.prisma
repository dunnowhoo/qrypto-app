generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String        @id @default(uuid())
  walletAddress    String        @unique
  address          String?
  fullName         String?
  email            String?
  phone            String?
  idNumber         String?       @unique
  kycStatus        KycStatus     @default(PENDING)
  encryptedApiKey  String?
  encryptedSecretKey String?
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
  
  bankAccounts     BankAccount[]
  transactions     Transaction[]
}

model BankAccount {
  id                String        @id @default(uuid())
  userId            String
  bankCode          String
  bankAccountNumber String
  createdAt         DateTime      @default(now())
  
  user              User          @relation(fields: [userId], references: [id])
  transactions      Transaction[]
  merchants         Merchant[]
}

// Merchant for QRIS payment routing
model Merchant {
  id              String      @id @default(uuid())
  merchantId      String      @unique
  name            String
  bankAccountId   String
  defaultAmount   Float
  nmid            String?     @unique  // National Merchant ID from QRIS
  merchantName    String?              // Fallback: match by name
  bankCode        String?              // Xendit bank code: "BCA", "MANDIRI", etc.
  accountNumber   String?              // Bank account number
  accountName     String?              // Account holder name
  isActive        Boolean     @default(true)
  description     String?              // Notes about this merchant
  updatedAt       DateTime    @updatedAt
  
  bankAccount     BankAccount @relation(fields: [bankAccountId], references: [id])
  
  @@index([merchantName])
}

model Transaction {
  id             String            @id @default(uuid())
  userId         String
  bankAccountId  String?
  amount         Float
  status         TransactionStatus @default(PENDING)
  type           TransactionType
  merchantId     String?
  createdAt      DateTime          @default(now())
  completedAt    DateTime?
  
  // Crypto side
  cryptoAmount   Decimal?          @db.Decimal(36, 18)
  cryptoCurrency String?           @default("IDRX")
  txHash         String?
  fromAddress    String?
  toAddress      String?
  networkFee     Decimal?          @db.Decimal(36, 18)
  
  // Fiat side
  fiatAmount     Decimal?          @db.Decimal(20, 2)
  fiatCurrency   String?           @default("IDR")
  
  // QRIS specific
  qrisPayment    QrisPayment?
  
  // Metadata
  description    String?
  updatedAt      DateTime          @updatedAt
  
  user           User              @relation(fields: [userId], references: [id])
  bankAccount    BankAccount?      @relation(fields: [bankAccountId], references: [id])
  
  @@index([userId])
  @@index([status])
  @@index([txHash])
}

model QrisPayment {
  id              String      @id @default(cuid())
  transactionId   String      @unique
  transaction     Transaction @relation(fields: [transactionId], references: [id])
  
  // QRIS Data
  qrisRaw         String
  merchantName    String
  merchantCity    String?
  merchantId      String?
  terminalId      String?
  
  // Payment Gateway
  paymentGateway  String?
  gatewayRefId    String?
  gatewayStatus   String?
  gatewayResponse Json?
  
  // Timestamps
  createdAt       DateTime    @default(now())
  paidAt          DateTime?
  
  @@index([merchantId])
  @@index([gatewayRefId])
}

model TreasuryWallet {
  id        String   @id @default(cuid())
  address   String   @unique
  network   String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
}

model MerchantMap {
  id            String   @id
  nmid          String?  @unique
  merchantName  String?
  bankCode      String
  accountNumber String
  accountName   String
  isActive      Boolean  @default(true)
  description   String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime

  @@index([merchantName])
}

//Transaction types
enum TransactionType {
  MANUAL
  QRIS
  QRIS_PAYMENT
  RECEIVE
  SEND
  SWAP
  TOP_UP
}

// Transaction status
enum TransactionStatus {
  PENDING
  PROCESSING
  COMPLETED
  SUCCESS
  FAILED
  EXPIRED
  REFUNDED
}

enum KycStatus {
  PENDING
  APPROVED
  REJECTED
}
